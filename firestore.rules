rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Puzzles collection - read-only for all clients
    // All puzzles are readable since they cycle infinitely
    // No client writes allowed - admin uses Firebase Admin SDK
    match /puzzles/{puzzleId} {
      allow read: if true;
      allow write: if false;
    }

    // Config collection - read-only metadata
    match /config/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
